rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    match /clients/{clientId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null &&
        firestore.get(/databases/(default)/documents/users/$(request.auth.token.email)).data.clientId == clientId;
    }
    
  }
}
