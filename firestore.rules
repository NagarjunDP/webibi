rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.token.email.lower())) &&
             get(/databases/$(database)/documents/users/$(request.auth.token.email.lower())).data.get('role', 'client') == 'admin';
    }

    // Helper: Check if user is owner of a client
    function isOwner(clientId) {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.token.email.lower())) &&
             get(/databases/$(database)/documents/users/$(request.auth.token.email.lower())).data.get('clientId', '') == clientId;
    }

    // User profiles (keyed by Email)
    match /users/{email} {
      allow read, write: if request.auth != null && request.auth.token.email.lower() == email.lower();
      allow read, write: if isAdmin();
    }

    // Clients
    match /clients/{clientId} {
      allow read: if true; 
      allow write: if isOwner(clientId) || isAdmin();

      match /services/{serviceId} {
        allow read: if true;
        allow write: if isOwner(clientId) || isAdmin();
      }

      match /gallery/{itemId} {
        allow read: if true;
        allow write: if isOwner(clientId) || isAdmin();
      }

      match /leads/{leadId} {
        allow read: if isOwner(clientId) || isAdmin();
        allow create: if true;
        allow update, delete: if isOwner(clientId) || isAdmin();
      }
    }
  }
}
